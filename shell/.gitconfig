[init]
	defaultBranch = main

[user]
	useConfigOnly = true
	name = Brandon Cardoso

[core]
	editor = nvim

[color]
	ui = true

[color "diff"]
	meta = cyan
	frag = magenta bold
	whitespace = red

[color "status"]
	added = green
	changed = yellow
	untracked = red
	branch = cyan

[commit]
	verbose = true

[diff]
	algorithm = histogram

[pull]
	; fast-forward only
	ff = only
	rebase = true

[merge]
	conflictstyle = diff3
	prompt = true

[rerere]
	; recording of resolved conflicts
	enabled = true

[stash]
	showPatch = true

[push]
	default = current

[log]
	decorate = full

[status]
	submoduleSummary = true

[blame]
	coloring = repeatedLines
	date = short
	markUnblameableLines = true
	markIgnoredLines = true

[alias]
	a = add
	ap = add --patch
	br = branch
	brd = branch --delete
	brl = branch --all --list --verbose
	brm = branch --move
	bl = blame
	cf = config
	cfg = config --global
	ch = checkout
	chb = checkout -b
	cl = clone
	co = commit
	coa = commit --amend
	com = commit --message
	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	cps = cherry-pick --skip
	d = diff
	ds = diff --staged
	i = init
	l = log --graph
	la = log --graph --all
	m = merge
	ms = merge --squash
	pl = pull
	ps = push
	psu = push --set-upstream
	psuo = push --set-upstream origin
	rb = rebase
	rbc = rebase --continue
	rbi = rebase --interactive
	re = reset
	reh = reset --hard
	reh1 = reset --hard HEAD~1
	res = reset --soft
	rs = restore
	rss = restore --staged
	rv = revert
	sh = stash
	sha = stash apply
	shc = stash clear
	shd = stash drop
	shl = stash list
	shp = stash pop
	shs = stash save
	sm = submodule
	sma = submodule add
	smd = submodule deinit
	smu = submodule update --remote --merge
	st = status
	whoami = !git config --get user.name && git config --get user.email
